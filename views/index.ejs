<% include partials/header %>

<div class="jumbotron jumbotron-fluid bg-1">
  <div class="container">
    <h1 class="display-4">Oscar Wilde</h1>
  </div>
</div>


  <div class="container-fluid bg-2 vcenter text-center ">
  <div class="row">
  <div class="col">
    <h3 style = "color:#FFCF2C;">Oscar Wilde Most Famoues Quotes</h3>
    <a  href = "/scrape" class = "" id = "thescraper">Get Quotes</a>
  </div>
  </div>
  </div>

  <div class = "container-fluid bg-3 text-center">
    <div class = "row">
        <div class = "col">
     
    <% for (var i = 0; i < story.length; i++){%>

    <div class="card">
            <div class="card-header">
               
            </div>
        <div class="card-body">
           <!--<h5 class="card-title"> <%=story[i].title%></h5>-->
            <p class="card-text"><%=story[i].quote%></p>
           
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#<%=story[i]._id%>" aria-expanded="false" aria-controls="collapseExample">
             Comments
            </button>
            <hr>
            <div class="collapse " id="<%=story[i]._id%>">
          <div class="card card-body">
          <!--prev comments-->

          <div class = "commentsdump">
          <%for (var j = 0; j < story[i].comment.length; j++) {%> 

          <h5><%= story[i].comment[j].author%></h5>
          <p><%= story[i].comment[j].body%></p>

          <%}%>
      
          
          </div>
          <!--add comments form-->
          <div>
 

          <form>
  <div class="form-group" method = "POST">
    <label for="author">Author:</label>
    <input  class="form-control author"  name="author"  placeholder="Your name">
  </div>

         <div class="form-group">
         <label>Comment:</label>
         <textarea class="form-control body"  name="body" rows="3" placeholder="Your comment"></textarea>
        </div>
        <button type="submit" class="btn btn-primary addcomment" data-id="<%=story[i]._id%>">Submit</button>

          </form>
          </div>
        </div>
      </div>





        </div>
        </div>

    <%}%>
        

         </div>
    </div>
  </div>

  <% include partials/footer %>